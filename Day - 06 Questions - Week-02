QUES 1:
#include <iostream>
using namespace std;

int main() {
    int n, sum = 0;

    cout << "Enter the size of the array: ";
    cin >> n;

    int arr[n];
    
    cout << "Enter the array: ";
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
        sum += arr[i];
    }

    cout << "Sum of the array: " << sum << endl;

    return 0;
}


QUES 2:
#include <iostream>
using namespace std;

int main() {
    int n, sumOdd = 0, sumEven = 0;

    cout << "Enter the size of the array: ";
    cin >> n;

    int arr[n];
    
    cout << "Enter the array: ";
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
        if (arr[i] % 2 == 0) {
            sumEven += arr[i];
        } else {
            sumOdd += arr[i];
        }
    }

    cout << "Sum of odd numbers: " << sumOdd << endl;
    cout << "Sum of even numbers: " << sumEven << endl;

    return 0;
}


QUES 3:
#include <iostream>
using namespace std;

int main() {
    int n, countOdd = 0, countEven = 0;

    cout << "Enter the size of the array: ";
    cin >> n;

    int arr[n];
    
    cout << "Enter the array elements: ";
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
        if (arr[i] % 2 == 0) {
            countEven++;
        } else {
            countOdd++;
        }
    }

    cout << "Number of odd numbers: " << countOdd << endl;
    cout << "Number of even numbers: " << countEven << endl;

    return 0;
}
